@{ ViewBag.Title = "OrderComplaint";}
@model IEnumerable<Mall.Core.Plugins.PluginInfo>
<script src="~/Scripts/jquery.MallDatagrid.js"></script>
<script src="~/Scripts/jquery.MallLinkage.nocreate.js"></script>
<script src="~/Scripts/jquery.placeholder.min.js"></script>
<script src="~/Scripts/bootstrap.autocomplete.js"></script>
<script src="~/Areas/SellerAdmin/Scripts/orderComplaintManagement.js"></script>

<link rel="stylesheet" type="text/css" href="~/Content/bootstrap-datetimepicker.min.css">
<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.zh-CN.js"></script>


<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <li type="statusTab"><a>所有记录</a></li>      
        <li value="1" type="statusTab"><a>未处理</a></li>
    </ul>
	<div class="queryDiv">
		<img class="queryImg" src="/Images/ic_query.png">
		<div class="tipBox">
			<h5>温馨提示:</h5>
			<ul>
				<li><span>展示店铺所有订单的投诉记录。</span></li>
				<li><span>您可以对投诉进行处理，解决用户的不满投诉。</span></li>
				<li><span>您处理之后，会由平台介入处理。</span></li>
			</ul>
		</div>
	</div>
    <div class="search-box" id="search-box">
        <form class="form-inline custom-inline">
            <div class="form-group">
                <label class="label-inline w75" for="">开始日期</label>
                <input id="inputStartDate" class="form-control input-ssm start_datetime" type="text" >
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">结束日期</label>
                <input id="inputEndDate" class="form-control input-ssm end_datetime" type="text" >
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">订单编号</label>
                <input class="form-control input-ssm input-number" type="text" id="txtOrderId">
            </div>          
            <div class="form-group">
                <label class="label-inline w75" for="">投诉会员</label>
                <input class="form-control input-ssm" type="text" id="txtUserName">
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">状态</label>
                <select class="form-control input-ssm" id="slelctStatus">
                    <option value="">全部</option>
                    @foreach (var d in Mall.Core.EnumHelper.ToDescriptionDictionary<Mall.Entities.OrderComplaintInfo.ComplaintStatus>())
                    {
                        <option value="@d.Key">@d.Value</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <button type="button" id="searchButton" class="btn btn-primary btn-sm">搜 索</button>
            </div>
        </form>
    </div>
    <table id="list" class="table"></table>
    <div class="cover"></div>
    <div class="preview-img"><img src="" /></div>
</div>
