<script type="text/javascript" src="/Scripts/moment.js"></script>
<script src="~/Scripts/echarts-plain-map.js"></script>
<script src="~/Scripts/CommonJS.js"></script>
<link href="/Content/bootstrap.min.css?v=2.4" rel="stylesheet">
<link rel="stylesheet" type="text/css" media="all" href="/Content/daterangepicker-bs3.css" />
<script src="~/Scripts/jquery.MallDatagrid.js"></script>
<script src="~/Scripts/jquery.MallLinkage.nocreate.js"></script>
<script type="text/javascript" src="/Scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="/Scripts/daterangepicker.js"></script>
<script type="text/javascript" src="/Scripts/bootstrap-datetimepicker.min.js"></script>
<script type="text/javascript" src="/Scripts/bootstrap-datetimepicker.zh-CN.js"></script>
<script src="~/Areas/SellerAdmin/Scripts/ProductVisitRank.js"></script>
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <li><a href="./ShopFlow">店铺总流量</a></li>
        <li class="active"><a>商品流量排行</a></li>
    </ul>
    <form class="form-inline custom-inline mt20 pb5">
        <div class="form-group">
            <select id="queryType" class="form-control input-sm">
                <option value="0">按天统计</option>
                <option value="1">按周统计</option>
                <option value="2">按月统计</option>
            </select>
        </div>
        <div class="form-group">
            <input id="inputStartDate" class="form-control input-sm start_datetime" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="text" >
        </div>
        <div class="form-group">
            @Html.DropDownList("year", (List<SelectListItem>)ViewBag.YearDrop, new { @class = "form-control input-sm w75", style = "display:none;", id = "yearDrop" })
        </div>
        <div class="form-group">
            @Html.DropDownList("month", (List<SelectListItem>)ViewBag.MonthDrop, new { @class = "form-control input-sm w75", style = "display:none;", id = "monthDrop" })
        </div>
        <div class="form-group">
            @Html.DropDownList("week", (List<SelectListItem>)ViewBag.WeekDrop, new { @class = "form-control input-sm", style = "display:none;", id = "weekDrop" })
        </div>
        <div class="form-group">
            <input id="inputDate" class="form-control input-ssm w220 start_datetime has-dateicon" placeholder="区间日期" type="text">
            <input name="begin" type="hidden" value="@(DateTime.Now.Year+"-"+DateTime.Now.Month.ToString("00")+"-01")" /><input name="end" type="hidden" />
            <i class="glyphicon glyphicon-calendar"></i>
        </div>
        <div class="form-group">
            <input type="button" class="btn btn-primary btn-sm" id="SearchBtn" value="查询" />
        </div>
    </form>
    <div class="count pb0">
        <div class="text-right form-group mb0">
            <div class="count-chat">
                <div id="main" style="height:500px;border:1px solid #ccc;padding:10px;"></div>
            </div>
        </div>
    </div>
</div>



