@model Mall.DTO.WeiActivityModel

<iframe name="iframeUpload" src="" width="350" height="35" frameborder="0" scrolling="no" style="display:none" id="iframe"></iframe>
<form></form>

<style>
    .Sclear-P71#subCate{float:none;margin-left:325px;}
</style>
<div class="container clear-v30">
    <ul class="breadcrumb clearfix">
        <li><a href="@Url.Action("management")">管理</a> </li>
        <li class="active"><a>大转盘详情</a></li>
    </ul>
    <div class="queryDiv">
        <img class="queryImg" src="/Images/ic_query.png">
        <div class="tipBox">
            <h5>温馨提示:</h5>
            <ul>
                <li><span>幸运大转盘活动奖励分为三种：积分、奖品红包、优惠券。其中优惠券必须为主动发放类型。</span></li>
                <li><span>目前仅微信端、APP支持幸运大转盘活动。</span></li>
            </ul>
        </div>
    </div>

