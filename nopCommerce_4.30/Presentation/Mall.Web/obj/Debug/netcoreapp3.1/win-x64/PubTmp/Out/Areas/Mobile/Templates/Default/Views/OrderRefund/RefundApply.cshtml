                if (rnum >= maxNumber) {
                    ram = maxPrice;
                }
                if (ram > maxPrice) {
                    ram = maxPrice;
                }
                if(_value>ram){
                    $(this).val(ram);
                    $(this).attr("placeholder","最多"+ram+"元");
                }
            });
        }
    });
