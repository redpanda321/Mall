@{
    ViewBag.Title = "会员分组";

    var activeOne = Model.ActiveOne;
    var activeThree = Model.ActiveThree;
    var activeSix = Model.ActiveSix;
    var activeCount = Convert.ToDouble(activeOne+ activeThree+ activeSix);

    var sleepingThree = Model.SleepingThree;
    var sleepingSix = Model.SleepingSix;
    var sleepingNine = Model.SleepingNine;
    var sleepingTwelve = Model.SleepingTwelve;
    var sleepingTwentyFour = Model.SleepingTwentyFour;
    var sleepingCount = Convert.ToDouble(sleepingThree + sleepingSix + sleepingNine + sleepingTwelve + sleepingTwentyFour);

    var birthdayToday = Model.BirthdayToday;
    var birthdayToMonth = Model.BirthdayToMonth;
    var birthdayNextMonth = Model.BirthdayNextMonth;
    var birthdayCount = Convert.ToDouble(birthdayToday + birthdayToMonth + birthdayNextMonth);

    var registeredMember = Convert.ToDouble(Model.RegisteredMember);
}
@model Mall.DTO.MemberGroup
<style type="text/css">
	.menber-group .group-wp{
		position: relative;
	}
	.queryDiv{
		top: 14px;
	}
</style>
<script src="~/Scripts/echarts.min.js"></script>
<script src="~/Scripts/echartsConfig.js"></script>
<script>
    var ActiveOne=@activeOne;
    var ActiveOneProportion='@((activeOne / (activeCount.Equals(0)?1: activeCount) * 100).ToString("F2"))%';
    var ActiveThree=@activeThree;
    var ActiveThreeProportion='@((activeThree / (activeCount.Equals(0)?1: activeCount) * 100).ToString("F2"))%';
    var ActiveSix=@activeSix;
    var ActiveSixProportion='@((activeSix / (activeCount.Equals(0)?1: activeCount) * 100).ToString("F2"))%';

    var SleepingThree=@sleepingThree;
    var SleepingThreeProportion='@((sleepingThree / (sleepingCount.Equals(0)?1: sleepingCount) * 100).ToString("F2"))%';
    var SleepingSix=@sleepingSix;
    var SleepingSixProportion='@((sleepingSix / (sleepingCount.Equals(0)?1: sleepingCount) * 100).ToString("F2"))%';
    var SleepingNine=@sleepingNine;
    var SleepingNineProportion='@((sleepingNine / (sleepingCount.Equals(0)?1: sleepingCount) * 100).ToString("F2"))%';
    var SleepingTwelve=@sleepingTwelve;
    var SleepingTwelveProportion='@((sleepingTwelve / (sleepingCount.Equals(0)?1: sleepingCount) * 100).ToString("F2"))%';
    var SleepingTwentyFour=@sleepingTwentyFour;
    var SleepingTwentyFourProportion='@((sleepingTwentyFour / (sleepingCount.Equals(0)?1: sleepingCount) * 100).ToString("F2"))%';

    var BirthdayToday=@birthdayToday;
    var BirthdayTodayProportion='@((birthdayToday / (birthdayCount.Equals(0)?1: birthdayCount) * 100).ToString("F2"))%';
    var BirthdayToMonth=@birthdayToMonth;
    var BirthdayToMonthProportion='@((birthdayToMonth / (birthdayCount.Equals(0)?1: birthdayCount) * 100).ToString("F2"))%';
    var BirthdayNextMonth=@birthdayNextMonth;
    var BirthdayNextMonthProportion='@((birthdayNextMonth / (birthdayCount.Equals(0)?1: birthdayCount) * 100).ToString("F2"))%';

    var RegisteredMember=@registeredMember;
</script>
<script src="~/Areas/Admin/Scripts/MemberGroup.js"></script>
