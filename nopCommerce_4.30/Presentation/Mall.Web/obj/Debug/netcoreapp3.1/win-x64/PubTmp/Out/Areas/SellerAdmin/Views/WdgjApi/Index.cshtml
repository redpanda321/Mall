@using Mall.Core;
@model Mall.Web.Areas.SellerAdmin.Models.WdgjApiModel

<script src="~/Areas/SellerAdmin/Scripts/WdgjApiIndex.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <li class="active"><a>网店管家管理</a></li>
    </ul>
    <div class="queryDiv">
		<img class="queryImg" src="/Images/ic_query.png">
		<div class="tipBox">
			<h5>温馨提示:</h5>
			<ul>
				<li><span>网店管家是第三方的企业级电子商务ERP软件，商家需要对接网店管家时，请输入对应的接入码和效验码。</span></li>
			</ul>
		</div>
	</div>
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label"><b>*</b>接入码：</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.uCode, new { @class = "form-control input-sm", maxlength = 50 })
            </div>
            <div class="col-sm-3">
                @Html.ValidationMessageFor(m => m.uCode, "", new { @class = "help-default cor-red" })
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label"><b>*</b>密钥：</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.uSign, new { @class = "form-control input-sm", maxlength = 50 })
            </div>
            <div class="col-sm-3">
                @Html.ValidationMessageFor(m => m.uSign, "", new { @class = "help-default cor-red" })
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">请求地址：</label>
            <div class="col-sm-3 form-control-static">
                网站域名<span style="color:red">/Wdgj_Api/Api.Ashx</span>
            </div>
        </div>
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" class="btn btn-primary" id="submit">保 存</button>
            </div>
        </div>
    </form>
</div>