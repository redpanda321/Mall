@using Mall.Core;
@{
    var explist = Mall.Application.ExpressApplication.GetAllExpress();
}
<script src="~/Scripts/jquery.MallDatagrid.js"></script>
<script src="~/Scripts/jquery.MallLinkage.nocreate.js"></script>
<script src="~/Scripts/jquery.json.js"></script>
<script src="~/Areas/Admin/Scripts/GiftOrderManagement.js"></script>


<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <li class="active" value="" type="statusTab"><a>礼品兑换管理</a></li>
        @foreach (var item in Enum.GetValues(typeof(Mall.Entities.GiftOrderInfo.GiftOrderStatus)))
        {
            var itemdata = (Mall.Entities.GiftOrderInfo.GiftOrderStatus)item;
            switch (itemdata)
            {
                default:
                    <li value="@((int)item)" type="statusTab"><a>@(itemdata.ToDescription())</a></li>
                    break;

            }
        }
    </ul>
    <div class="queryDiv">
		<img class="queryImg" src="/Images/ic_query.png">
		<div class="tipBox">
			<h5>温馨提示:</h5>
			<ul>
				<li><span>礼品可以在PC端、微信端、APP端积分商城兑换。</span></li>
				<li><span>礼品的编辑与发放全部由平台完成，礼品发货不会收取用户邮费。</span></li>
			</ul>
		</div>
	</div>
    <div class="search-box">
        <form class="form-inline custom-inline">
            <div class="form-group">
                <label class="label-inline w75" for="">名称</label>
                <input class="form-control input-ssm" type="text" id="skey">
            </div>
            <div class="form-group">
                <button type="button" id="search" class="btn btn-primary btn-sm">搜索</button>
            </div>
        </form>
    </div>

    <table class="table clear-v39" id="list"></table>
</div>
<div id="expselectbox" class="clear-v40 dln" >
    <select class="input-ssm cssCompanyName">
        <option value="">选择快递公司</option>
        @foreach (var logisticsCompany in explist)
        {
            <option value="@logisticsCompany.Name">@logisticsCompany.Name</option>
        }
        <option value="-1">其他</option>
    </select>

</div>
