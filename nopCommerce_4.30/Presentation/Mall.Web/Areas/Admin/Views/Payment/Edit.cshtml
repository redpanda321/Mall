@model Mall.Core.Plugins.FormData

<script src="~/Areas/Admin/Scripts/PaymentEdt.js"></script>
<link href="~/Content/jquery.onoff.css.css" rel="stylesheet" />

<div class="container">
    <ul class="breadcrumb clearfix">
        <li><a>支付列表</a></li>
        <li class="active"><a>编辑支付方式</a></li>
    </ul>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="">支付方式:</label>
            <div class="col-sm-3 form-control-static">@ViewBag.Name</div>

        </div>

        @foreach (var item in Model.Items)
        {
            if (item.Name == "Main_Mch_ID")
            {
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="">服务商模式开启</label>
                    <div class="col-sm-10">
                        <div class="onoffswitch">
                            <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="ckbServices">
                            <label class="onoffswitch-label" for="ckbServices">
                                <span class="onoffswitch-inner"></span>
                                <span class="onoffswitch-switch"></span>
                            </label>
                        </div>
                    </div>
                </div>
            }
            <div class="form-group @Html.Raw(item.Name == "Main_Mch_ID" || item.Name == "Main_AppId" ? "j_service" : "")">
                <label class="col-sm-2 control-label" for="">@item.DisplayName:</label>
                <div class="col-sm-3">
                    @if (item.Type == Mall.Core.Plugins.FormData.FormItemType.text)
                    {
                        <input formitem name="@item.Name" type="text" value="@item.Value" class="form-control input-sm" />
                    }
                    else
                    {
                        <input formitem name="@item.Name" type="checkbox" value="@item.Value" class="form-control input-sm" />
                    }
                </div>
                <div class="col-sm-4">
                    <p class="help-default clear-d">@((item.Tips=="微信公众号中的AppId" || item.Tips== "微信公众号中的AppSecret") ? item.Tips.Replace("公众号",""):item.Tips)</p>
                </div>
            </div>
        }
        <input type="hidden" id="pluginId" value="@ViewBag.Id" />

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="button" id="btn" class="btn btn-primary" value="保 存" />
            </div>
        </div>
    </div>

</div>
