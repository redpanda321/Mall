<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script type="text/javascript">
    var btsubmit;
    var loading;

    $(function () {

        $('#ckbSpecifications').change(function () {
            if (this.checked == true) {
                $("#IsEnable").val("True");
                $("#appconfigbox").show();
            } else {
                $("#IsEnable").val("False");
                $("#appconfigbox").hide();
            }
        });

        btsubmit = $("#btsubmit");
    });

    //提交前检测
    $("#addform").bind("submit", function (e) {
        var _t = $(this);
        var isdataok = true;
        if ($("#IsEnable").val() == "True") {
            if ($("#app_key").val() == "") {
                $("#app_key").focus();
                $.dialog.tips("请填写达达app_key");
                return false;
            }
            if ($("#app_secret").val() == "") {
                $.dialog.tips("请填写达达app_secret");
                $("#app_secret").focus();
                return false;
            }
            if ($("#source_id").val() == "") {
                $.dialog.tips("请填写达达商户号");
                $("#source_id").focus();
                return false;
            }
        }
        return isdataok;
    });

    var isposting = false;
    function beginpost() {

        if (isposting) {
            $.dialog.tips("数据提交中...");
            return false;
        }
        isposting = true;
        btsubmit.text("提交中...");
        loading = showLoading();
    }

    function successpost(data) {
        isposting = false;
        btsubmit.text("保 存");
        loading.close();
        if (data.success == true) {
            var title = "设置成功!";
            if (data.msg.length > 0) {
                title += data.msg;
            }
            $.dialog.tips(title, function () {
                window.location.reload();
            });
        } else {
            $.dialog.errorTips(data.msg);
        }
    }
</script>