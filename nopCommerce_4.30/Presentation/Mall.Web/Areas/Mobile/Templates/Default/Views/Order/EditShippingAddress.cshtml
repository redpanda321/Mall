<script type="text/javascript">
    var searchService;
    var pageIndex = 0;
    var pageCapacity = 1000;
    var geocoder;
    var hasData = true;
    $(document).ready(function () {        
        //设置Poi检索服务，用于本地检索、周边检索
        searchService = new qq.maps.SearchService({
            //检索成功的回调函数
            complete: function (results) {
                //设置回调函数参数
                var pois = results.detail.pois;
                if (pois == undefined) {
                    //$("#divMore").html("查询不到数据");
                    //selectCityName = selectAreaName;
                    searchKeyword(1);
                }
                else {
                    for (var i = 0, l = pois.length; i < l; i++) {
                        var poi = pois[i];
                        if (typeof (poi.address) != "undefined") {
                            var parText = "\'" + poi.latLng + "\'" + "," + "\'" + poi.address + "\'" + "," + "\'" + poi.name + "\'";
                            $("#nearAddress").append('<li data-addr=\"' + poi.address + '\" onclick="choosePosition(' + parText + ')"><h3>' + poi.name + '</h3><p>' + poi.address + '</p></li>');
                        }
                    }
                    if (pois.length < 10) {
                        $("#divMore").html("附近没有更多地址了");
                        hasData = false;
                    }
                    else {
                        //$("#divMore").html("加载更多...");
                    }
                    pageIndex++;
                }
            },
            //若服务请求失败，则运行以下函数
            error: function () {
                $("#divMore").html("查询不到数据");
            }
        });
        $("#divAdr").hide();
        var isopenstore = $('#isOpenStore').val();
        if (isopenstore == 'True') {
            $("#txtKeyWord").bind('input propertychange', function () {
                setTimeout(function () {
                    var keyword = $("#txtKeyWord").val();
                    if (keyword.length > 0) {
                        searchKeyword(1);
                    }
                }, 300);
            });
            $("#txtKeyWord").focus(function () {
                setTimeout(function () {
                    var keyword = $("#txtKeyWord").val();
                    if (keyword.length > 0) {
                        searchKeyword(1);
                    }
                }, 300);
            });
        }
    });

    //设置搜索的范围和关键字等属性
    function searchKeyword(index) {
        if (!isRefresh && index == 2) {
            isRefresh = true;
            return;
        }
        //$("#container").hide();
        $("#divAdr").show();
        var keyword = $("#txtKeyWord").val();
        if (keyword == "") {
            $.dialog.errorTips("请输入要搜索的地址信息");
            return;
        }
        //var region = selectCityName;
        var region = "";
        if (selectProviceName != null && selectProviceName.length > 0) {
            var lastname = selectProviceName.substring(selectProviceName.length - 1, selectProviceName.length);//获取最后一个字判断是否是省或自治区
            if (lastname == "省" || selectProviceName.indexOf("自治区") != -1) {
                region = selectProviceName;
            }
        }
        if (selectCityName !== "请选择" && selectCityName !== "其他") {
            region = region + selectCityName;//精确到省市
        }
        if (selectAreaName !== "请选择" && selectAreaName !== "其他") {
            region = region + selectAreaName;//精确到省市区
        }

        if (index == 1) {
            pageIndex = 0;
            hasData = true;
            $("#nearAddress").empty();
        }
        else {
            if (!hasData) {
                return;
            }
        }
        //根据输入的城市设置搜索范围
        searchService.setLocation(region);
        //设置搜索页码
        searchService.setPageIndex(pageIndex);
        //设置每页的结果数
        searchService.setPageCapacity(pageCapacity);
        //根据输入的关键字在搜索范围内检索
        searchService.search(keyword);
    }
